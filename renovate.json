{
  "extends": [
    "config:base"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "dependencies (non-major)"
    },
    {
      "matchPackagePatterns": ["@types"],
      "mathUpdateTypes": ["patch", "minor"],
      "GroupName": "@types (non-major)"
    },
  ]
}
